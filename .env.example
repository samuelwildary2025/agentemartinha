# ===========================================
# LLM Configuration - Google Gemini
# ===========================================
LLM_PROVIDER=google
LLM_MODEL=gemini-2.0-flash-lite
LLM_TEMPERATURE=0.0
GOOGLE_API_KEY=SUA_GOOGLE_API_KEY_AQUI

# Se quiser usar OpenAI, descomente:
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o-mini
# OPENAI_API_KEY=sua_openai_api_key

# Se quiser usar xAI (Grok), descomente:
# LLM_PROVIDER=openai
# LLM_MODEL=grok-4-1-fast-reasoning
# OPENAI_API_BASE=https://api.x.ai/v1

# ===========================================
# PostgreSQL (Memória)
# ===========================================
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/dbname
POSTGRES_TABLE_NAME=memoria
POSTGRES_MESSAGE_LIMIT=8

# ===========================================
# PostgreSQL (Banco Inteligente de Produtos)
# ===========================================
PRODUCTS_DB_CONNECTION_STRING=postgresql://user:password@host:5432/dbname
POSTGRES_PRODUCTS_TABLE_NAME=produtos



# ===========================================
# WhatsApp API (Nova Integração)
# ===========================================
WHATSAPP_API_BASE_URL=https://sua-api-whatsapp.com
WHATSAPP_INSTANCE_TOKEN="seu_token_da_instancia_aqui"

# ===========================================
# WhatsApp / UAZ API (Legado)
# ===========================================
WHATSAPP_TOKEN=seu_whatsapp_token
WHATSAPP_API_URL=https://api.uaz.io
WHATSAPP_METHOD=POST

# ===========================================
# Server
# ===========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=false
LOG_LEVEL=INFO
